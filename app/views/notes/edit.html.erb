<%= form_for :note, url: note_path(@note), method: :patch do |f| %>

<div>
  <div class="row note-header">
	<div class="col-sm-10 col-xs-8">NOTE</div>
	<div class="col-sm-2  col-xs-4 note-header-link">
	</div>
  </div>
  <div class="row note-details">
 	<div class="col-sm-2 col-xs-3 note-label">
 		<%= f.label :date %>
 	</div>
    <div class="col-sm-10 col-xs-9 note-value">
		<%= f.date_field :date %>
	</div>
  </div>
  <div class="row note-details">
 	<div class="col-sm-2 col-xs-3 note-label">
		<%= f.label :time %>
 	</div>
    <div class="col-sm-10 col-xs-9 note-value">
    	<%= f.time_select :time, {minute_step: 15, ampm: true} %>
    </div>
  </div>
  <div class="row note-details">
 	<label class="col-sm-2 col-xs-3 note-label">Note</label>
    <div class="col-sm-10 col-xs-9 note-value">
			<%= f.text_area :description, rows: 10, class: 'note-text' %>
    </div>
  </div>
  <div class="row note-details">
 	<label class="col-sm-2 col-xs-3 note-label">Tags</label>
    <div class="col-sm-10 col-xs-9 note-value">
		<% @tags.each do |t| %>
			<%= check_box_tag "note[tag_ids][]", t.id, @note.tag_ids.include?(t.id) %>
			<%= t.name %></br>
		<% end %>
		<%= link_to "New Tag", controller: "tags", action: "new" %>
    </div>
  </div>
  <div class="row button-entry-row">
 	<div class="col-sm-2 col-xs-2"></div>
 	<div class="col-sm-3 col-xs-3 button-entry">
		<%= link_to "DELETE", { action: "destroy", id: @note.id },
		method: :delete, data: { confirm: "Are you sure?" } %>
 	</div>
 	<div class="col-sm-2 col-xs-2"></div>
 	<div class="col-sm-3 col-xs-3 button-entry">
		<%= link_to "CANCEL", controller: "home", action: "index" %>
 	</div>
 	<div class="col-sm-2 col-xs-2"></div>
  </div>
  <div class="row button-entry-row">
 	<div class="col-sm-3 col-xs-3"></div>
 	<div class="col-sm-6 col-xs-6 button-entry">
		<%= f.submit "SAVE", :class => 'submit-button' %>
 	</div>
 	<div class="col-sm-3 col-xs-3"></div>
  </div>
</div>
<% end %>
