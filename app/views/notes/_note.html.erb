<% if @printDate%>
	<div class="row date">
	  	<div class="col-md-12">
  			<%= note.date.strftime("%B %e, %Y") %>
  		</div>
	</div>
<% end %>
<div class="row note-details">
    <div class="col-md-2 time">
		<%= note.time.strftime("%l:%M %P")%>
    </div>
    <div class="col-md-8 note-text">
		<%= simple_format(note.description) %>
		<% if note.tags.size > 0 %>
			<% note.tags.each do |t| %>
				<%= image_tag "tag-icon.png" %>
				<i><%= t.name %></i></br> 
			<% end %>
		<% end %>
    </div>
    <div class="col-md-2 edit-cell">
		<%= link_to "View", controller: "notes", action: "show", id: note.id %>
    </div>
</div>

