<div class="row">
  <div class="row note-header">
	<div class="col-sm-10 col-xs-8">TAG</div>
	<div class="col-sm-2  col-xs-4 note-header-link">
		<%= link_to "Edit", controller: "tags", action: "edit" %>
	</div>
  </div>
  <div class="row note-details">
 	<div class="col-sm-2 col-xs-3 note-label">Name</div>
    <div class="col-sm-10 col-xs-9 note-value">
		<%= @tag.name %>
    </div>
  </div>
  <div class="row note-details">
 	<div class="col-sm-2 col-xs-3 note-label">Notes</div>
    <div class="col-sm-10 col-xs-9 note-value">
		<% @tag.notes.each do |n| %>
			<%= link_to n.summarize, controller: "notes", action: "show", id: n.id %></br>
		<% end %>
    </div>
  </div>
  <div class="row button-entry-row">
 	<div class="col-sm-4 col-xs-2"></div>
 	<div class="col-sm-4 col-xs-8 button-entry">
		<%= link_to "OK", controller: "home", action: "index" %>
 	</div>
 	<div class="col-sm-4 col-xs-2"></div>
  </div>
</div>
