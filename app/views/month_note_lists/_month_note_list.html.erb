<div>
<div class="row note-header">
  	<div class="col-xs-12">
		<%= @notesForMonth.date.strftime("%B %Y") %>
	</div>
</div>
<% monthList = @notesForMonth.displayedDays %>
<% if monthList.size > 0 %>
    <% monthList.each do |dayList|%>
		<% if dayList.notes.size > 0 %>
		    <% @dayList = dayList %>
		    <% @onlyOneNote = true %>
			<%= render dayList %>
		<% end %>
	<% end %>
<% end %>
</div>